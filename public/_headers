# Caching headers for static assets (optimized for 100% Lighthouse)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache self-hosted fonts for 1 year
/fonts/*.woff2
  Cache-Control: public, max-age=31536000, immutable

# Cache legacy font formats
/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/*.woff
  Cache-Control: public, max-age=31536000, immutable

# Cache images for 1 year (self-hosted and assets)
/images/*
  Cache-Control: public, max-age=31536000, immutable

/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable

/*.webp
  Cache-Control: public, max-age=31536000, immutable

# HTML - no cache, always revalidate
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# Manifest and service worker - no cache
/manifest.json
  Cache-Control: public, max-age=0, must-revalidate

/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
